<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.testRoomAndNavigationDrawerTest.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.testRoomAndNavigationDrawerTest.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="RoundedAllCorners">
        <item name="background">@drawable/all_rounded_corners</item>
    </style>

    <style name="BlurryDialog">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DialogAnimationEnterExit">
        <item name="android:windowEnterAnimation">@anim/open_dialog_anim</item>
        <item name="android:windowExitAnimation">@anim/close_dialog_anim</item>
    </style>
</resources>